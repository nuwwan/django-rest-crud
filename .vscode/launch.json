{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py", // location for manage.py file
            "args": [
                "runserver",
                "5500" // specify the port
            ],
            "django": true
        }
    ]
}